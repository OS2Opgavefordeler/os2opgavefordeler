<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
   xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
   <persistence-unit name="OS2TopicRouter">
      <jta-data-source>java:/OS2TopicRouterDS</jta-data-source>
      <class>dk.os2opgavefordeler.model.kle.KleMainGroup</class>
      <class>dk.os2opgavefordeler.model.kle.KleGroup</class>
      <class>dk.os2opgavefordeler.model.kle.KleTopic</class>
      <properties>
         <!-- Properties for Hibernate -->
         <property name="hibernate.hbm2ddl.auto" value="create-drop" />
         <property name="hibernate.show_sql" value="false" />
<!--         <property name="hibernate.hbm2ddl.auto" value="update" /> -->
      </properties>
   </persistence-unit>
</persistence>
